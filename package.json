{
  "name": "ryanfitton-next-js-2024",
  "version": "2.4.0",
  "private": true,
  "scripts": {
    "start": "next dev",
    "dev": "cross-env INIT_CWD=$PWD next dev",
    "build": "cross-env INIT_CWD=$PWD next build && cross-env NODE_OPTIONS='--experimental-json-modules --experimental-detect-module' EXPORT='true' node ./scripts/postbuild.mjs",
    "serve": "next start",
    "analyze": "cross-env ANALYZE=true next build",
    "lint": "next lint --fix --dir pages --dir app --dir components --dir lib --dir layouts --dir scripts",
    "format": "prettier --write \"**/*.{ts,tsx,md,mdx,css,scss}\"",
    "test": "jest --no-watchAll && cypress open",
    "test:jest-watch": "jest --watch",
    "test:jest-ci": "jest --no-watchAll --ci",
    "test:cypress-open": "start-server-and-test dev http://localhost:3000 \"cypress open --e2e\"",
    "test:cypress-run": "start-server-and-test dev http://localhost:3000 \"cypress run --e2e\"",
    "test:cypress-info": "cypress info",
    "test:cypress-verify": "cypress verify"
  },
  "dependencies": {
    "@headlessui/react": "2.2.0",
    "@next/bundle-analyzer": "15.2.4",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.0.5",
    "@tailwindcss/typography": "^0.5.16",
    "body-scroll-lock": "^4.0.0-beta.0",
    "contentlayer2": "0.5.5",
    "esbuild": "0.25.2",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.2",
    "hast-util-from-html-isomorphic": "^2.0.0",
    "image-size": "2.0.1",
    "media-chrome": "^4.2.2",
    "next": "15.2.4",
    "next-contentlayer2": "0.5.5",
    "next-themes": "^0.4.6",
    "pliny": "0.4.1",
    "postcss": "^8.4.39",
    "postcss-cli": "^11.0.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "reading-time": "1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-citation": "^2.3.0",
    "rehype-katex": "^7.0.0",
    "rehype-katex-notranslate": "^1.1.4",
    "rehype-preset-minify": "7.0.0",
    "rehype-prism-plus": "^2.0.0",
    "rehype-slug": "^6.0.0",
    "remark": "^15.0.0",
    "remark-gfm": "^4.0.0",
    "remark-github-blockquote-alert": "^1.2.1",
    "remark-math": "^6.0.0",
    "sass": "^1.79.3",
    "tailwindcss": "^4.0.5",
    "unist-util-visit": "^5.0.0",
    "yarn": "^1.22.22"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.0.1",
    "@testing-library/cypress": "^10.0.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/mdx": "^2.0.12",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@typescript-eslint/eslint-plugin": "^8.12.0",
    "@typescript-eslint/parser": "^8.12.0",
    "chalk": "^4.1.2",
    "cross-env": "^7.0.3",
    "cypress": "^14.2.1",
    "eslint": "^9.14.0",
    "eslint-config-next": "15.2.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.0",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "start-server-and-test": "^2.0.11",
    "typescript": "^5.1.3"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.6.3"
}
